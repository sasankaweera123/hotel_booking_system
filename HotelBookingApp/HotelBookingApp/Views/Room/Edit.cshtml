@using HotelBookingApp.Models.Utils
@model Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Room Type</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<RoomType>()" id="Type"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Is Available</label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>