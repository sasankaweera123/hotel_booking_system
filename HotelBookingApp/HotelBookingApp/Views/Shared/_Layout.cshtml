<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HotelBookingApp</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body class="container min-vh-100 d-flex flex-column">
<header style="height: 100px;">
    <nav class="navbar navbar-expand-sm mb-4 justify-content-center">
        <div class="container-fluid justify-content-center d-flex">
            <a class="navbar-brand mx-auto fw-bold fs-2" asp-controller="Home" asp-action="Index">HotelBooking</a>
        </div>
    </nav>
</header>

<div style="min-height: calc(100vh - 100px - 100px);" class="d-flex flex-column">
    <main role="main" class="pb-3 flex-grow-1">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-4 py-3" style="height: 60px;">
    <div class="container text-center">
        &copy; 2025 - HotelBookingApp
    </div>
</footer>

<script src="~/js/site.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>